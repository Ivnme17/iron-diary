---
import '../styles/global.css';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-gray-900 text-gray-100">
		<nav class="bg-gray-800 border-b border-gray-700">
			<div class="container mx-auto px-4 py-4">
				<div class="flex justify-between items-center">
					<a href="/" class="text-2xl font-bold text-primary-500 hover:text-primary-400">DiarioDeHierro</a>
					<div class="space-x-6">
						<a href="/dashboard" class="text-gray-300 hover:text-primary-400 transition-colors">Dashboard</a>
						<a href="/workout/new" class="text-gray-300 hover:text-primary-400 transition-colors">Nuevo Entrenamiento</a>
						<a href="/auth" class="text-gray-300 hover:text-primary-400 transition-colors">Login</a>
					</div>
				</div>
			</div>
		</nav>
		<main class="container mx-auto px-4 py-8">
			<slot />
		</main>
	</body>
</html>
